<%- include('header') -%>
<div class="add-student">
    <form action="/config" method="post">
        <input type="text" name="new_student_name" placeholder="Student Name" autocomplete="off"/>
        <input type="text" name="tokens" placeholder="Tokens" autocomplete="off"/>
        <button type="submit" name="button" value="add-student">+</button>
    </form>

    <div>
        <form action="/config" method="post">
            <% for(let i=0;i < students.length;i++){ %>
                <label>
                <p><%= "Name: " + students[i].name + " Token: " + students[i].tokens %></p>
                <input type="checkbox" name="to_class" value= <%= students[i]._id %> 
                <%= students[i].to_class? "checked" : "" %>
                >
                </label>
            <% } %>
            <button type="submit" name="button" value="generate-proxy">Generate Proxy</button>
        </form>
    </div>
    <form action="/config" method="post">
        <button type="submit" name="button" value="clear-all">Clear all</button>
    </form>
</div>
<%- include('footer') -%>